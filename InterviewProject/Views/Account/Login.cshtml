@model LoginViewModel

<h2>Login</h2>

<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email">Email</label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span><br />
    </div>
    <div>
        <label asp-for="Password">Password</label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span><br />
    </div>
    <div>
        <label asp-for="RememberMe">Remember me</label>
        <input asp-for="RememberMe" /><br />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>