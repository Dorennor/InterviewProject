@model EditPostViewModel
<h2>Edit post</h2>
<form method="post" asp-controller="Topics" asp-action="EditPost">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Text">Post</label><br />
        <textarea class="w-auto col-auto" cols="150" rows="5" placeholder="Left empty if you don't want to edit this field." asp-for="Text"></textarea>
        <span asp-validation-for="Text"></span><br />
    </div>
    <div hidden>
        <label asp-for="PostId">PostId</label><br />
        <input asp-for="PostId" value="@ViewData["Id"]" />
        <span asp-validation-for="PostId"></span><br />
    </div>
    <div>
        <input type="submit" value="Edit" />
    </div>
</form>